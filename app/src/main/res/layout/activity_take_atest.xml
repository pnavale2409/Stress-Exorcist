<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeATestActivity"
    android:id="@+id/drawer_layout"
    tools:openDrawer="star">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/green_gradient">


        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_baseline_menu_24"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Take A Test"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/take_a_test_center_back">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/test1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:alpha="1"
                        android:backgroundTint="@color/white"
                        android:outlineAmbientShadowColor="@color/back_green"
                        android:outlineSpotShadowColor="@color/back_green"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="1dp"
                                android:background="#f5b642" />

                            <TextView
                                android:id="@+id/attempted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Attempt"
                                android:textColor="#f5b642"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="20 questions"
                                android:textColor="#808080"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/testname1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/attempted"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Depression Test"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/testname1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="#d3d3d3" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/test_icon1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@id/testname1"
                                android:layout_margin="20dp"
                                android:backgroundTint="#f5b642"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/exam_icon" />
                            </androidx.cardview.widget.CardView>

                            <TextView

                                android:id="@+id/testcontext1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/testname1"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@id/test_icon1"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp"
                                android:text="Take Depression Test and Analyze your depression state"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/test2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:alpha="1"
                        android:backgroundTint="@color/white"
                        android:outlineAmbientShadowColor="@color/back_green"
                        android:outlineSpotShadowColor="@color/back_green"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="1dp"
                                android:background="#ff0000" />

                            <TextView
                                android:id="@+id/attempted2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Attempt"
                                android:textColor="#FF0000"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/question2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="20 questions"
                                android:textColor="#808080"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/testname2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/attempted2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Anxiety Test"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/testname2"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="#d3d3d3" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/test_icon2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@id/testname2"
                                android:layout_margin="20dp"
                                android:backgroundTint="#ff0000"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/exam_icon" />
                            </androidx.cardview.widget.CardView>

                            <TextView

                                android:id="@+id/testcontext2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/testname2"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@id/test_icon2"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp"
                                android:text="Take Anxiety Test and Analyze your depression state"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/test3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="40dp"
                        android:alpha="1"
                        android:backgroundTint="@color/white"
                        android:outlineAmbientShadowColor="@color/back_green"
                        android:outlineSpotShadowColor="@color/back_green"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="40dp"
                                android:layout_height="3dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="1dp"
                                android:background="@color/back_green" />

                            <TextView
                                android:id="@+id/attempted3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Attempt"
                                android:textColor="@color/back_green"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/question3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="20 questions"
                                android:textColor="#808080"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/testname3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/attempted3"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/lato"
                                android:padding="10dp"
                                android:text="Addiction Test"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/testname3"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="#d3d3d3" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/test_icon3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_below="@id/testname3"
                                android:layout_margin="20dp"
                                android:backgroundTint="@color/back_green"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/exam_icon" />
                            </androidx.cardview.widget.CardView>

                            <TextView

                                android:id="@+id/testcontext3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/testname3"
                                android:layout_marginTop="15dp"
                                android:layout_toRightOf="@id/test_icon3"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingBottom="10dp"
                                android:text="Take Addiction Test and Analyze your depression state"
                                android:textColor="#000"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/back_green"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>